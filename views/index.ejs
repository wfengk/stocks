<html>
<head>
  <title>Stocks</title>
  <link href="/scripts/angular-material/angular-material.css" rel="stylesheet">
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <script src="/scripts/ag-grid-community/dist/ag-grid-community.js"></script>
  <script src="/scripts/angular/angular.js"></script>
  <script src="/scripts/angular-aria/angular-aria.js"></script>
  <script src="/scripts/angular-animate/angular-animate.js"></script>
  <script src="/scripts/angular-messages/angular-messages.js"></script>
  <script src="/scripts/angular-material/angular-material.js"></script>
  <script src="/javascripts/stocks.js"></script>
  <style> .glyphicon-thumbs-up { cursor:pointer } </style>
</head>
<body ng-app="stocksApp" ng-controller="MainCtrl">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="page-header">
        <h1><img src="/images/monkey.png"> Stocks</h1>
        
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1 col-md-offset-1">
      <md-datepicker ng-change="updateResults()" ng-model="chosenDate" md-placeholder="Enter date"></md-datepicker>
    </div>
    <div class="col-md-1 col-md-offset-1">
      <md-progress-circular md-mode="indeterminate" ng-disabled="!isLoading"></md-progress-circular>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h4>Number of results: {{numResults}}</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div ag-grid="gridOptions" class="ag-theme-material" style="height: 100%;"/>
    </div>
  </div>  
</body>
</html>